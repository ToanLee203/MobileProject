<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F2F7"
    android:padding="32dp"
    android:gravity="center_horizontal">

    <!-- Lời chào cá nhân -->
    <TextView
        android:id="@+id/tvGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xin chào ToanLV!"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#1C1C1E"
        android:layout_marginBottom="12dp" />

    <!-- Thông điệp nhỏ -->
    <TextView
        android:id="@+id/tvWelcomeMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quản lý chi tiêu và thống kê nhanh chóng"
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_marginBottom="32dp" />

    <!-- CardView: Thêm mới chi tiêu -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:id="@+id/btnAddExpense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_input_add"
                app:tint="#007AFF"
                android:contentDescription="Icon thêm chi tiêu" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Thêm mới chi tiêu"
                android:textSize="18sp"
                android:textColor="#007AFF"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_weight="1" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CardView: Xem chi tiêu -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:id="@+id/btnViewExpense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_agenda"
                app:tint="#007AFF"
                android:contentDescription="Icon xem chi tiêu" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Xem chi tiêu"
                android:textSize="18sp"
                android:textColor="#007AFF"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_weight="1" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CardView: Thống kê chi tiêu -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:id="@+id/btnStatistic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_info_details"
                app:tint="#007AFF"
                android:contentDescription="Icon thống kê" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Thống kê chi tiêu"
                android:textSize="18sp"
                android:textColor="#007AFF"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_weight="1" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CardView: Đăng xuất -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@android:color/holo_red_light">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng xuất"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
